<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level %logger{3} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="roslesinforg.porokhin.filecomparator.FileComparator" level="error" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="roslesinforg.porokhin.filecomparator.service.StringComparator" level="TRACE" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Root level="error">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>